{
    "title": "Google reCaptcha",
    "version": "1.00",
    "name": "GoogleReCaptcha",
    "description": "Replace default image recognition based recaptcha by Google's smart checkbox reCaptcha",
    "author": "ImpressPages",
    "options": [
        {
            "label": "Site key",
            "name": "siteKey",
            "type": "text",
            "default": "",
            "note": "You can generate the key <a href=\"https://www.google.com/recaptcha/admin\">here</a>"
        },
        {
            "label": "Secret key",
            "name": "secretKey",
            "type": "text",
            "default": "You can generate the key <a href=\"https://www.google.com/recaptcha/admin\">here</a>"
        },
        {
            "label": "Mode",
            "name": "mode",
            "type": "select",
            "values": ["Production", "Development"],
            "default": "Production"
        }
    ]
}
